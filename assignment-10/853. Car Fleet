import java.util.*;

class Solution {
    public int carFleet(int target, int[] position, int[] speed) {
        int n = position.length;
        double[][] cars = new double[n][2];

        // Step 1: Pair each car with its time to reach target
        for (int i = 0; i < n; i++) {
            cars[i][0] = position[i];
            cars[i][1] = (double)(target - position[i]) / speed[i];
        }

        // Step 2: Sort by position descending (car closest to target first)
        Arrays.sort(cars, (a, b) -> Double.compare(b[0], a[0]));

        // Step 3: Count fleets
        int fleets = 0;
        double lastTime = 0;

        for (int i = 0; i < n; i++) {
            double time = cars[i][1];
            if (time > lastTime) {   // new fleet starts
                fleets++;
                lastTime = time;
            }
        }

        return fleets;
    }
}
